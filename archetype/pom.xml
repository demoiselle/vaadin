<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>br.gov.frameworkdemoiselle.archetypes</groupId>
	<artifactId>demoiselle-vaadin-jpa</artifactId>
	<version>2.2.2-SNAPSHOT</version>
	<packaging>jar</packaging>

	<organization>
		<name>SERPRO - Serviço Federal de Processamento de Dados</name>
		<url>http://www.frameworkdemoiselle.gov.br/</url>
	</organization>
	
	<properties>
		<category>Arquétipo</category>

		<junit>4.5</junit>
		<log4j>1.2.14</log4j>
		<demoiselle.version>2.1.3-SNAPSHOT</demoiselle.version>
		<easymock.version>3.0</easymock.version>
		<powermock.version>1.4.6</powermock.version>
		<jasperreports.version>4.0.1</jasperreports.version>

		<maven-resources-plugin>2.4.3</maven-resources-plugin>
		<maven-compiler-plugin>2.3</maven-compiler-plugin>
		<maven-site-plugin>2.2</maven-site-plugin>
		<maven-source-plugin>2.1.1</maven-source-plugin>
		<maven-javadoc-plugin>2.7</maven-javadoc-plugin>
		<maven-surefire-plugin>2.5</maven-surefire-plugin>
		<maven-assembly-plugin>2.2-beta-5</maven-assembly-plugin>
		<wagon-maven-plugin>1.0-beta-3</wagon-maven-plugin>
		<maven-release-plugin>2.0</maven-release-plugin>
		<maven-project-info-reports-plugin>2.3.1</maven-project-info-reports-plugin>
		<maven-jxr-plugin>2.2</maven-jxr-plugin>
		<maven-surefire-report-plugin>2.7.1</maven-surefire-report-plugin>
		<cobertura-maven-plugin>2.4</cobertura-maven-plugin>

		<encoding.default>UTF-8</encoding.default>
		<java.version>1.6</java.version>

		<htdocs.url>sftp://web.sourceforge.net/home/project-web/demoiselle/htdocs</htdocs.url>
		<upload.url>${htdocs.url}/component</upload.url>
		<repository.url>${htdocs.url}/repository</repository.url>
		<site.shell.url>${htdocs.url}/component</site.shell.url>

		<svn.host>demoiselle.svn.sourceforge.net</svn.host>
		<svn.path>demoiselle/component/trunk</svn.path>
		<svn.connection>scm:svn:http://${svn.host}/svnroot/${svn.path}</svn.connection>
		<svn.developerConnection>scm:svn:https://${svn.host}/svnroot/${svn.path}</svn.developerConnection>
		<svn.url>scm:svn:http://${svn.host}/viewvc/${svn.path}</svn.url>
	</properties>

	<parent>
		<groupId>br.gov.frameworkdemoiselle</groupId>
		<artifactId>demoiselle-archetype-parent</artifactId>
		<version>2.2.0</version>
	</parent>

	<name>Vaadin and JPA Archetype</name>
	<description>Archetype for a Web Application (Vaadin/JPA)</description>

	<licenses>
		<license>
			<name>LGPL</name>
			<url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
		</license>
	</licenses>
	
	<ciManagement>
		<system>Continuum</system>
		<notifiers>
			<notifier>
				<type>mail</type>
				<sendOnError>true</sendOnError>
				<sendOnFailure>true</sendOnFailure>
				<sendOnSuccess>true</sendOnSuccess>
				<sendOnWarning>true</sendOnWarning>
				<configuration>
					<address>demoiselle-devel@lists.sourceforge.net</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>
	<mailingLists>
		<mailingList>
			<name>Demoiselle Users</name>
			<archive>https://sourceforge.net/mailarchive/forum.php?forum_name=demoiselle-users</archive>
			<post>demoiselle-users@lists.sourceforge.net</post>
			<subscribe>https://lists.sourceforge.net/lists/listinfo/demoiselle-users</subscribe>
			<unsubscribe>https://lists.sourceforge.net/lists/listinfo/demoiselle-users</unsubscribe>
		</mailingList>
	</mailingLists>

	<issueManagement>
		<system>Mantis</system>
		<url>http://sourceforge.net/apps/mantisbt/demoiselle/main_page.php</url>
	</issueManagement>

	<scm>
		<connection>scm:svn:http://demoiselle.svn.sourceforge.net/svnroot/demoiselle/component/trunk/demoiselle-vaadin-jpa</connection>
		<developerConnection>scm:svn:https://demoiselle.svn.sourceforge.net/svnroot/demoiselle/component/trunk/demoiselle-vaadin-jpa</developerConnection>
		<url>scm:svn:http://demoiselle.svn.sourceforge.net/viewvc/demoiselle/component/trunk/demoiselle-vaadin-jpa</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>demoiselle.sourceforge.net</id>
			<url>${repository.url}/release</url>
			<uniqueVersion>false</uniqueVersion>
		</repository>
		<snapshotRepository>
			<id>demoiselle.sourceforge.net</id>
			<url>${repository.url}/snapshot</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
		<site>
			<id>demoiselle.sourceforge.net</id>
			<url>${site.shell.url}/${project.artifactId}/${project.version}</url>
		</site>
	</distributionManagement>

	<repositories>
		<repository>
			<id>demoiselle.sourceforge.net</id>
			<url>http://demoiselle.sourceforge.net/repository/release</url>
		</repository>
		<repository>
			<id>demoiselle.sourceforge.net-snapshot</id>
			<url>http://demoiselle.sourceforge.net/repository/snapshot</url>
		</repository>
	</repositories>

</project>